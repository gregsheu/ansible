#elastic repo
repo_name: "elastic"
repo_des: "Elasticsearch 6.x"
elastic_repo: "https://artifacts.elastic.co/packages/6.x/yum"
gpgkey: "https://artifacts.elastic.co/GPG-KEY-elasticsearch"

#esmaster system and jvm settings
esmaster_xmx: 1g
esmaster_xms: 1g

#set nofile to 65536 /etc/security/limits.conf ulimit -n 65536
esmaster_files: 65536

#set nproc to 4096 /etc/security/limits.conf ulimit -u 4096
esmaster_threads: 4096

#set memlock to unlimited /etc/security/limits.conf ulimit -l unlimited 
esmaster_mlock: unlimited 

#sysctl value /etc/sysctl.conf vm.swappiness is set to 1
esmaster_swap: 1

#sysctl value /etc/sysctl.conf vm.max_map_count=262144
esmaster_vm: 262144

#logstash system and jvm settings
logstash_xmx: 1g
logstash_xms: 1g
